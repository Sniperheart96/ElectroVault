# ElectroVault API - Lokale Entwicklungsumgebung

# === PostgreSQL ===
DATABASE_URL="postgresql://electrovault_dev_user:password@localhost:5432/electrovault_dev?schema=public"

# === Keycloak ===
# WICHTIG: Muss mit der URL übereinstimmen, die das Frontend verwendet!
# Der Token-Issuer im JWT ist die URL, mit der das Frontend authentifiziert wurde.
KEYCLOAK_URL=http://192.168.178.80:8080
KEYCLOAK_REALM=electrovault
KEYCLOAK_CLIENT_ID=electrovault-web

# === API Server ===
API_PORT=3001
API_HOST=0.0.0.0
API_BASE_URL=http://192.168.178.80:3001/api/v1
NODE_ENV=development
LOG_LEVEL=info

# === CORS ===
CORS_ORIGIN=http://192.168.178.80:3000

# === MinIO (S3-kompatible Datei-Speicherung) ===
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET=electrovault-files
# Öffentliche URL für Presigned URLs (für externe Clients)
MINIO_PUBLIC_ENDPOINT=192.168.178.80:9000
